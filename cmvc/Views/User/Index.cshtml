@model List<cmvc.Models.TableViewModels.UserTableVM>
@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>


<div class="row">
    <div class="md-lg-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/User/Add")'" value="Nuevo" />
    </div>
</div>

<br />

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Edad</th>
            </tr>

            @foreach (var oElemento in Model )
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Email</td>
                    <td>@oElemento.Edad</td>
                    <td>
                        <input onclick="jsDelete(@oElemento.Id);" type="button" value="Delete" class="btn btn-danger"/>
                        <input onclick="document.location.href='@Url.Content("~/User/Edit/"+oElemento.Id)'" type="button" value="Edit" class="btn btn-warning"/>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<script>
    function jsDelete(id) {

        if (confirm("Are you sure to delete?")) {

        url = "@Url.Content("~/User/Delete")" + "/"+id;

        $.post(url, function (data) {
            if (data == "1") {
                document.location.href = "@Url.Content("~/User/")"
            } else {
                alert("Error al eliminar :(");
            }
        })

        }
    }
</script>
